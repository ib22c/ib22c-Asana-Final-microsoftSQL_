<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Asana.Maui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Asana.Maui"
    xmlns:views="clr-namespace:Asana.Maui.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="Asana.Maui">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="Projects"
        ContentTemplate="{DataTemplate views:ProjectsView}"
        Route="ProjectPage"/>
    <ShellContent
        Title="ToDo Details"
        ContentTemplate="{DataTemplate views:ToDoDetailView}"
        Route="ToDoDetails" />

</Shell>
